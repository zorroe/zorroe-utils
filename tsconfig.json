{
  "compilerOptions": {
    "target": "ES5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*/*.ts", "src/**/*.ts", "src/*.ts", "test/*.*.ts", "test/*/*.*.ts"],
  "output": "./dist/",
  "paths": {
    "src/*": ["src/*"]
  }
}
